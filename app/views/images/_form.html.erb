
<%= form_for @image, :html => { :multipart => true }, remote: true do |f| %>
  <div class="modal-body">
    <div id="messages">
     <% if @image.errors.any? %>
       <div id="error_explanation">
         <ul>
         <% @image.errors.full_messages.each do |msg| %>
           <li><%= msg %></li>
         <% end %>
         </ul>
       </div>
     <% end %>
    </div>

    <%= f.label :title, "Title:" %>

    <%= f.text_field :title %>
    <%= f.label :source, "Video Upload:" %>
    <%= f.file_field :source %>
    <br>
  </div>
  <%= f.submit :class=>"primary btn" %>
<% end %>