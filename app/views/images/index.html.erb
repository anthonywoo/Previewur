<div class="row-fluid">
  <div class="span9 left-panel">
    <% @images.each do |image| %>
      <div class="image" >
        <%= link_to image_tag(image.preview.url, :size => "166x166"), image_url(image) %>
      </div>
    <% end %>
  </div>

  <div class="span2">
    <a href="#myModal" role="button" class="btn" data-toggle="modal" data-target="#myModal" id="launchmodal">Create New GIF</a>



    <div id="myModal" class="modal hide" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3>Create New GIF</h3>
      </div>
      <%= render :partial => "form" %>
    </div>
  </div>


</div>